<% content_for :title do %>
  <%= @spacecraft.name %> &ndash; <%= @spacecraft.updated_at.to_fs(:good_look) %>
<% end %>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @spacecraft.name %>:
        </p>
      < <div class="card-content">
          <div class="content">
              <p>ID: <span class="has-text-weight-bold"><%= @spacecraft.id %></span></p>
              <p>Weight: <span class="has-text-weight-bold"><%= @spacecraft.weight %></span> Tons</p>
              <p>Owned By: <span class="has-text-weight-bold"><%= @spacecraft.owned_by %></span></p>
              <p>Launch Date: <span class="has-text-weight-bold"><%= @spacecraft.launch_date %></span></p>
              <p class="italic">Logged <%= time_ago_in_words(@spacecraft.updated_at) %> ago</p>
          </div>
        </div>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_spacecraft_path(@spacecraft), class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>